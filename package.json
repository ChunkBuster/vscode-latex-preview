{
  "name": "latex-live",
  "displayName": "LaTeX Live",
  "description": "Compilation and live preview of LaTeX documents",
  "version": "0.0.1",
  "publisher": "ajshort",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Languages",
    "Productivity"
  ],
  "activationEvents": [
    "onCommand:latex-live.showPreview",
    "onCommand:latex-live.showPreviewToSide",
    "onCommand:latex-live.showSource"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "latex-live.showPreview",
        "category": "LaTeX",
        "title": "Open Preview"
      },
      {
        "command": "latex-live.showPreviewToSide",
        "category": "LaTeX",
        "title": "Open Preview to the Side"
      },
      {
        "command": "latex-live.showSource",
        "category": "LaTeX",
        "title": "Show Source"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == latex",
          "command": "latex-live.showPreview",
          "alt": "markdown.showPreviewToSide",
          "group": "navigation"
        },
        {
          "when": "resourceScheme == markdown",
          "command": "latex-live.showSource",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == latex",
          "command": "latex-live.showPreview",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  }
}
